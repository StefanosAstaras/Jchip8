<?xml version="1.0"?>
<project name="Jchip8" default="compile">
    <target name="clean" description="Delete build">
        <delete dir="build"/>
    </target>
    <target name="clobber" depends="clean" description="Delete build and .jar">
        <delete file="Jchip8.jar"/>
    </target>
    <target name="compile" description="Create build folder and compile">
        <mkdir dir="build"/>
        <javac srcdir="." destdir="build"/>
    </target>
    <target name="jar" depends="compile" description="Make a jar">
        <jar destfile="Jchip8.jar">
            <fileset dir="build" includes="**/*.class"/>
            <manifest>
                <attribute name="Main-Class" value="Jchip8.Jchip8"/>
            </manifest>
        </jar>
    </target>
</project>
